/* ===== 건드리지 마세요 ===== */
function embed(url){
  if(url.includes("shorts/")) return "https://www.youtube.com/embed/"+url.split("shorts/")[1].split("?")[0];
  if(url.includes("youtu.be/")) return "https://www.youtube.com/embed/"+url.split("youtu.be/")[1].split("?")[0];
  if(url.includes("watch?v=")) return "https://www.youtube.com/embed/"+url.split("watch?v=")[1].split("&")[0];
  return url;
}

let show = 12;
const step = 12;
const list = document.getElementById("videoList");
const btn  = document.getElementById("moreBtn");

function render(){
  list.innerHTML="";
  videos.slice(0,show).forEach(v=>{
    const d=document.createElement("div");
    d.className="card";
    d.innerHTML=`
      <div class="frame">
        <iframe src="${embed(v.url)}" loading="lazy" allowfullscreen></iframe>
      </div>
      <div class="title">${v.title}</div>`;
    list.appendChild(d);
  });
  btn.style.display = show>=videos.length?"none":"block";
}
btn.onclick=()=>{show+=step;render();};
render();
</script>
